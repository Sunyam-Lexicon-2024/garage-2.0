@model IEnumerable<ParkedVehicleViewModel>

@{
    ViewBag.Title = "Vehicles";
}

<div class="row">
    <div class="col-sm-8">
        <h3>Vehicles</h3>
        <table class="table-bordered">
            <thead class="table-dark">
                <th>@Html.DisplayNameFor(x => x.Id)</th>
                <th>@Html.DisplayNameFor(x => x.RegistrationNumber)</th>
                <th>@Html.DisplayNameFor(x => x.Type)</th>
                <th>@Html.DisplayNameFor(x => x.Brand)</th>
                <th>@Html.DisplayNameFor(x => x.Model)</th>
                <th>@Html.DisplayNameFor(x => x.Wheels)</th>
                <th>@Html.DisplayNameFor(x => x.RegisteredAt)</th>
                <th>@Html.DisplayNameFor(x => x.Color)</th>
            </thead>
            <tbody>
                @foreach (var vehicle in Model)
                {
                    <tr>
                        <th scope="row">@vehicle.Id</th>
                        <td>@vehicle.RegistrationNumber</td>
                        <td>@vehicle.Type</td>
                        <td>@vehicle.Brand</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.Wheels</td>
                        <td>@vehicle.RegisteredAt.ToShortDateString()</td>
                        <td>@vehicle.Color</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>