@model GarageViewModel

@{
    ViewBag.Title = $"{Model.Name}";
}

<div class="row">
    <div class="col">
        <div class="card bg-light">
            <div class="card-body">
                <h3>@Model.Name</h3>
                <p>Capacity: @Model.MaxCapacity</p>
                @using (Html.BeginForm("Delete", "Garage", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.Hidden("id", Model.Id)
                    <input type="submit"
                           value="Delete"
                           onclick="return confirm('Are you sure you want to delete this Garage?');"
                           class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>
