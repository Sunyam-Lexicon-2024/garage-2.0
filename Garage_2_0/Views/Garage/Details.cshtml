@model GarageViewModel

@{
    ViewBag.Title = $"{Model.Name}";
}

<div class="row">
    <div class="col-md-4">
        <div class="card p-2 bg-light">
            <div class="card-body">
                <h3>@Model.Name</h3>
                <p>@Html.DisplayNameFor(model => model.ParkingSpotCount): @Model.ParkingSpotCount</p>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Delete", "Garage", FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.Hidden("id", Model.Id)
    <input type="submit"
           value="Deregister"
           onclick="return confirm('Are you sure you want to deregister this Garage?');"
           class="btn btn-primary mt-2 mb-2" />
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
