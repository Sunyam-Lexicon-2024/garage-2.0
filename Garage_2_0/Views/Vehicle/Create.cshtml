@model CreateParkedVehicleViewModel;

@{
    ViewData["Title"] = "Park vehicle";
}

<div class="row">
    <div class="col-sm-8 col-xl-3">
        <div class="card p-2 bg-light">
            <div class="card-body">
                <h3 class="mb-3">Park your vehicle</h3>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        @foreach (var type in Enum.GetValues(typeof(VehicleType)))
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="RegistrationNumber" class="control-label"></label>
                        <input asp-for="RegistrationNumber" class="form-control" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Wheels" class="control-label"></label>
                        <input asp-for="Wheels" class="form-control" />
                        <span asp-validation-for="Wheels" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Color" class="control-label"></label>
                        <select asp-for="Color" class="form-control">
                            @foreach (var color in Enum.GetValues(typeof(Color)))
                            {
                                <option value="@color">@color</option>
                            }
                        </select>
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
</div>